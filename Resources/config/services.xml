<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="symfony_cmf_content.controller" class="Symfony\Cmf\Bundle\ContentBundle\Controller\ContentController">
            <argument type="service" id="templating" />
            <argument>%symfony_cmf_content.default_template%</argument>
            <argument type="service" id="symfony_cmf_content.publish_workflow_checker"/>
        </service>

        <service id="symfony_cmf_content.publish_workflow_checker" class="Symfony\Cmf\Bundle\ContentBundle\PublishWorkflow\PublishWorkflowChecker">
            <argument>%symfony_cmf_content.role%</argument>
            <argument type="service" id="security.context" on-invalid="ignore"/>
        </service>

    </services>

</container>
